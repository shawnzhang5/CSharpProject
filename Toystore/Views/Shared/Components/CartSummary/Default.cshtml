@model Cart

<section class="text-center">
  <h3><i class="fas fa-shopping-cart"></i>&nbsp;@Model.GetSessionName()'s&nbsp;Cart&nbsp;<i class="fas fa-shopping-cart"></i></h3><br />
  <a asp-action="Cart" asp-controller="Home">
    <h5>@Model.Lines.Sum(x => x.Quantity)&nbsp;item(s)</h5>
    <h5>@Model.ComputeTotalValue().ToString("c")&nbsp;total</h5>
    <div class="btn btn-success">Check My Cart</div>
  </a>
</section>